<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema path="/io/github/tobagin/Ntfyr/" id="@app-id@" gettext-domain="@gettext-package@">
    <key name="window-width" type="i">
      <default>800</default>
      <summary>Window width</summary>
    </key>
    <key name="window-height" type="i">
      <default>500</default>
      <summary>Window height</summary>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Window maximized state</summary>
    </key>
    <key name="run-on-startup" type="b">
      <default>false</default>
      <summary>Run on startup</summary>
    </key>
    <key name="sort-descending" type="b">
      <default>false</default>
      <summary>Sort messages by descending date</summary>
    </key>
    <key name="start-in-background" type="b">
      <default>false</default>
      <summary>Start in background</summary>
    </key>
    <key name="app-lock-enabled" type="b">
      <default>false</default>
      <summary>Enable Biometric/App Lock on Startup</summary>
    </key>
    <key name="custom-servers" type="as">
      <default>[]</default>
      <summary>List of custom servers</summary>
    </key>
    <key name="default-server" type="s">
      <default>'https://ntfy.sh'</default>
      <summary>Default server for new subscriptions</summary>
    </key>
    <key name="show-default-server" type="b">
      <default>true</default>
      <summary>Show default server (ntfy.sh) in list</summary>
    </key>
    <key name="lock-timeout" type="i">
      <default>300</default>
      <summary>App lock timeout in seconds</summary>
    </key>
    <key name="auto-lock-enabled" type="b">
      <default>false</default>
      <summary>Enable auto-lock timeout</summary>
    </key>
  </schema>
</schemalist>
